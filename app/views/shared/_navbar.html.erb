<header class="p-2 navbar-lewagon navbar-mathmavens sticky-top">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start gap-3">
       <%= link_to "/", class: "navbar-brand" do %>
        <div class="d-flex">
          <%= image_tag "https://raw.githubusercontent.com/math-mavens/math-invaders/master/app/assets/images/math-mavens.png" %><span class="fs-3 fw-bold">Math Mavens</span>
        </div>
       <% end %>
       <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
        <ul class="nav col-12 col-lg-auto mr-4 ms-lg-auto mb-2 justify-content-center mb-md-0 text-navbar">
          <li><%= link_to "Dashboard", dashboard_path, class: "nav-link" %></li>
          <li><%= link_to "Leaderboards", levelleaderboards_path, class: "nav-link" %></li>
          <li><%= link_to "About us", "#", class: "nav-link" %></li>
        </ul>
        <% if user_signed_in? %>
          <div class="text-end">
            <a href="/dashboard" class="btn prm-button-nav me-2">Play</a>
          </div>
          <li class="dropdown" style="list-style: none;">
           <button type="button" class="btn btn-avatar rounded-circle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <div style="height: 25px; width: 13px;"><span style="line-height: 20px;"><%= current_user.nickname[0].capitalize %></span></div>
            </button>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <div class="text-end">
            <%= link_to "Login",  user_session_path, class: "btn button-login me-2" %>
          </div>
        <% end %>
      </div>
    </div>
  </header>

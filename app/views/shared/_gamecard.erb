<div class="container my-3">
  <h2 class="my-4 text-center">Math Invaders</h2>
  <div class="col-md-12 ml-auto mr-auto">
    <div class="group-cards">
      <div class="row flex-row justify-content-center gap-4">
        <!-- CARD -->
        <% @user_levels.each_with_index do |user_level, index| %>
          <div class="col-lg-3 col-md-6 col-sm-12 mb-1 px-0">
            <div class="card-game">
              <img src="https://www.mathmavens.live/images/<%= index + 1 %>.png" alt="">
              <div class="card-body">
                <h5><%= user_level.level_name.capitalize %></h3>
                <div class="mt-3">
                  <div class="row">
                    <div class="col"><i class="fa-solid fa-stopwatch"></i>&nbsp;&nbsp;Best Time:</div>
                    <div class="col text-warning"><h6><%= user_level.best_time %></h6></div>
                  </div>
                  <div class="row">
                    <div class="col"><i class="fa-solid fa-list-check"></i>&nbsp;&nbsp;Attempts:</div>
                    <div class="col text-warning"><h6><%= user_level.attempts_count %></h6></div>
                  </div>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-3">
                  <div>
                    <%= link_to "Play ðŸŽ®",
                    new_attempt_path(level_id: user_level.level_id),
                    class: "btn btn-primary text-white",
                    data: { turbo: false } %>
                  </div>
                  <div class="badge bg-secondary"><%= user_level.category_name %></div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <h1>Dashboard</h1>
    <%= render "shared/gamecard" %>
    <div class="row">
          <% @attempts.each do |attempt|%>
      <div class="col-sm-6">
       <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title">Attempts</h5>
          <p class="card-text">Total Time Played: <%= attempt.total_time %> seconds</p>
          <p class="card-text">Total Problems Solved: <%= attempt.problems_solved %></p>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Levels Completed</h5>
          <p class="card-text">Total Levels completed: <%= attempt.level_id %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>
